<h1 align="center">Productos</h1>
<table text-align="center"
  id="main"
  style="border:2px solid white;margin-left:auto;margin-right:auto;"
>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Avatar</th>
    <th>Ver Detalles</th>
  </tr>
  {{#if isEmpty}}
    <tr>
      <td>No hay productos registrados a√∫n</td>
    </tr>
  {{/if}}
  {{#each value}}
    <tr>
      <td>{{this._id}}</td>
      <td>{{this.nombre}}</td>
      <td>{{this.precio}}</td>
      <td>
        {{#if this.avatar}}
          <img
            src="{{this.avatar}}"
            alt="{{this.nombre}}"
            style="width:150px;height:160px;"
          />
        {{/if}}
      </td>
      <td><form action="{{@root.detailUrlBase}}/{{this._id}}">
          <button type="submit">Ver Producto</button></form></td>
  {{/each}}
</table>
<p></p>
