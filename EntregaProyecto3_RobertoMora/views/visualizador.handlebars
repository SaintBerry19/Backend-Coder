<h1 align="center">Productos en Tiempo Real</h1>
<div
  align="center"
  style="border:2px solid white;margin-left:200px;margin-right:200px;"
>
  <h2>Ingresar producto</h2>
  <form id="form-producto">
    <input
      type="text"
      name="idtable"
      id="idtable"
      required
      placeholder="ID Temporal"
    />
    <input
      type="text"
      name="nombre"
      id="nombre"
      required
      placeholder="Nombre"
    />
    <input
      type="text"
      name="precio"
      id="precio"
      required
      placeholder="Precio"
    />
    <input type="text" name="stock" id="stock" required placeholder="Stock" />
    <input
      type="text"
      name="codigo"
      id="codigo"
      required
      placeholder="Codigo"
    />
    <input
      type="text"
      name="descripcion"
      id="descripcion"
      required
      placeholder="Descripcion"
    />
    <input
      type="text"
      name="avatar"
      id="avatar"
      required
      placeholder="Url Imagen"
    />
    <button type="submit">Enviar</button>
  </form>
</div>
